<% @posts.each do |post| %>
  <div> 
    <%= link_to post_path(post.id) do %>
    <p>Title: <%= post.title %></p>
    <% end %>
    <p>Body: <%= post.body %></p>
    <%= image_tag post.user.get_profile_image(100,100) %>
    <p>ユーザーネーム: <%= post.user.name %></p>
    <p><%= link_to "#{post.comments.count} コメント", post_path(post.id) %></p>
  </div>
<% end %>
