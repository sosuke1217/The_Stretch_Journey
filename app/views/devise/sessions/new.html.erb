    <div class="row justify-content-center">
      <div class="col-12 col-md-9 col-lg-7 col-xl-6 col-xxl-5">
        <div class="card border border-light-subtle rounded-5">
          <h2 class="text-center text-dark bg-light py-4 mb-0">ログイン</h2>
          <div class="form-body p-4">
            <%= form_with model: @user, url: user_session_path do |f| %>
              <div class="input-group mb-3">
                <div class="input-group-prepend">
                  <span class="input-group-text"><i class="fa-solid fa-envelope"></i></span>
                </div>
                <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "メールアドレス", class: "form-control" %>
              </div>
              <div class="input-group mb-3">
                <div class="input-group-prepend">
                  <span class="input-group-text" aria-hidden="true"><i class="fa-solid fa-lock"></i></span>
                </div>
                <%= f.password_field :password, placeholder: "パスワード", class: "form-control"  %>
              </div>
              <% if devise_mapping.rememberable? %>
                <div class="field">
                  <%= f.check_box :remember_me %>
                  <%= f.label :remember_me %>
                </div>
              <% end %>
              <div class="actions">
              <%= f.submit "サインイン", class: "btn btn-lg btn-block btn-info mt-2 mb-3" %>
              </div>
            <% end %>
            <%= render "devise/shared/links" %>
