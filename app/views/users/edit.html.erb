<h2>プロフィール編集</h2>
<%= render 'layouts/error_messages', object: @user %>
<%= form_with model: @user do |f| %>
  <label for="inputName">Name</label>
  <%= f.text_field :name, autofocus: true, id:"inputName", placeholder:"名前"%>
  <label for="inputImage">Profile Image</label>
  <%= f.file_field :profile_image, placeholder: "プロフィール画像", accept: "image/*" %> 
  <label for="inputEmail">メールアドレス</label>
  <%= f.email_field :email, placeholder: "メールアドレス" %>
  <%= f.submit "変更を保存" %>
<% end %>