<div class="row justify-content-center">
  <div class="col-12 col-md-9 col-lg-7 col-xl-6 col-xxl-5">
    <div class="card border border-light-subtle rounded-5">
      <h2 class="text-center text-dark bg-light py-4 mb-0">ストレッチプログラム作成</h2>
      <div class="card-body">
      <%= render 'layouts/error_messages', object: @stretch_program %>
      <%= form_with model: @stretch_program do |f| %>
        <div class="form-group mb-3">
          <%= f.label :title %>
          <%= f.text_field :title, class: "form-control" %>
        </div>

        <div class="form-group mb-3">
          <%= f.label :description %>
          <%= f.text_area :description, class: "form-control", rows: 5 %>
        </div>

        <div class="form-group mb-3">
          <%= f.label :duration %>
          <%= f.number_field :duration, class: "form-control" %>
        </div>

        <div class="form-group mb-3">
          <%= f.label :difficulty %>
          <%= f.number_field :difficulty, class: "form-control" %>
        </div>

        <div class="form-group mb-3">
          <%= f.label :genre_id %>
          <%= f.collection_select :genre_id, Genre.all, :id, :name, { prompt: "Select a genre" }, class: "form-select" %>
        </div>

        <div class="form-group mb-3">
          <%= f.label :stretch_tags %><br>
          <%= f.collection_check_boxes :stretch_tag_ids, StretchTag.all, :id, :name do |b| %>
            <div>
              <%= b.label { b.check_box + " " + b.text } %>
            </div>
          <% end %>
        </div>

        <div>
          <%= f.label :tag_names, "タグ" %>
          <%= f.text_field :tag_names, value: @stretch_program.tag_names %>
        </div>

        <div class="text-center">
          <%= f.submit "作成する", class: "btn btn-primary" %>
        </div>
      <% end %>
      </div>
    </div>
  </div>
